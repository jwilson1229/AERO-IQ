{
  "name": "aero-iq",
  "version": "1.0.0",
  "description": "A full-stack application for sports betting analytics",
  "main": "Server/dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node Server/dist/server.js",
    "server": "cd Server && npm run dev",
    "client": "cd Client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd Server && tsc",
    "build:client": "cd Client && echo \"Building client with inline config\" && node -e \"const fs=require('fs'); fs.writeFileSync('vite.config.simple.js', \\`import { defineConfig } from 'vite'; export default defineConfig({ build: { outDir: 'dist', emptyOutDir: true } });\\`)\" && npx vite build --config vite.config.simple.js",
    "lint": "cd Client && eslint .",
    "preview": "cd Client && vite preview",
    "test": "vitest",
    "install-all": "npm install && cd Server && npm install && cd ../Client && npm install"
  },
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "graphql": "^16.10.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.14.0",
    "concurrently": "^9.1.2",
    "happy-dom": "^13.4.1",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.x"
  },
  "nodemonConfig": {
    "watch": [
      "Server/src"
    ],
    "ext": "ts,json,js",
    "exec": "cd Server && npx tsc && node dist/server.js"
  },
  "client": {
    "dependencies": {
      "@apollo/client": "^3.13.6",
      "@chakra-ui/form-control": "^2.2.0",
      "@chakra-ui/icons": "^2.2.4",
      "@chakra-ui/react": "^3.16.0",
      "@emotion/react": "^11.14.0",
      "@emotion/styled": "^11.14.0",
      "framer-motion": "^12.6.3",
      "graphql": "^16.10.0",
      "react": "^19.0.0",
      "react-dom": "^19.0.0",
      "react-icons": "^5.5.0",
      "react-router-dom": "^7.5.0",
      "recharts": "^2.15.2"
    },
    "devDependencies": {
      "@eslint/js": "^9.21.0",
      "@types/react": "^19.1.0",
      "@types/react-dom": "^19.0.4",
      "@vitejs/plugin-react": "^4.3.4",
      "eslint": "^9.21.0",
      "eslint-plugin-react-hooks": "^5.1.0",
      "eslint-plugin-react-refresh": "^0.4.19",
      "globals": "^15.15.0",
      "typescript-eslint": "^8.24.1",
      "vite": "^6.2.0"
    }
  }
}
